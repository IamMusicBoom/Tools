<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="NewsTitleTv">
        <item name="android:textSize">@dimen/NewsTitle</item>
        <item name="android:textColor">@color/title_news_color</item>
        <item name="android:padding">@dimen/NewTitlePadding</item>

    </style>

    <style name="NewsSubTitleTv">
        <item name="android:textSize">@dimen/NewsSubTitle</item>
        <item name="android:textColor">@color/sub_title_news_color</item>
        <item name="android:padding">@dimen/NewSubTitlePadding</item>
    </style>


</resources>
